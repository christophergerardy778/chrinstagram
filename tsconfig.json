{
  "compilerOptions": {
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    "rootDir": "./",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true
  },
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
  ],
}
